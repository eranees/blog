{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es2017",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",

    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  }
}
